@model OdeToFood.ViewModels.HomePageViewModel

@{
    ViewData["Title"] = "Home"; // could be ViewBag.Title but this is somewhat more efiicient
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome!</h1>
<table>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                <a href="/home/details/@restaurant.Id">Details</a>
                @Html.ActionLink("View", "Details", new { id = restaurant.Id })
            </td>
            <td>@restaurant.Name</td>
        </tr>
    }
</table>

@section footer{
    <h3>@Model.CurrentMessage</h3>
}

